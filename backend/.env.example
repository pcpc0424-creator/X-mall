# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:YOUR_SECURE_DB_PASSWORD@localhost:5432/xmall
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xmall
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD

# Redis
REDIS_URL=redis://localhost:6379

# JWT (필수! 반드시 32자 이상의 안전한 랜덤 문자열로 변경)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d
JWT_ADMIN_EXPIRES_IN=8h

# Admin (프로덕션에서 반드시 변경!)
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_EMAIL=admin@xmall.com
ADMIN_DEFAULT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_MIN_12_CHARS

# Payring PG (페이링 수기결제)
PAYRING_API_KEY=YOUR_API_KEY
PAYRING_API_URL=http://api.payring.co.kr
PAYRING_CALLBACK_URL=https://yourdomain.com/X-mall/api/payring/callback
